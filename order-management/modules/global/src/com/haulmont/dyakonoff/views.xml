<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.haulmont.dyakonoff.entity.Order"
          extends="_local"
          name="order-browse-view">
        <property name="customer"
                  view="_minimal"/>
        <property name="manager"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.dyakonoff.entity.Order"
          extends="_local"
          name="order-edit-view">
        <property name="customer"
                  view="_minimal"/>
        <property name="items"
                  view="_minimal">
            <property name="subTotal"/>
        </property>
        <property name="manager"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.dyakonoff.entity.OrderItem"
          extends="_local"
          name="orderItem-view">
        <property name="product"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.dyakonoff.entity.Stock"
          extends="_local"
          name="stock-view">
        <property name="product"
                  view="_minimal">
            <property name="measure"/>
            <property name="pricePerMeasure"/>
        </property>
    </view>
    <view class="com.haulmont.dyakonoff.entity.Stock"
          extends="_local"
          name="stock-edit-view">
        <property name="product"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.cuba.security.entity.User"
          extends="_minimal"
          name="user-view">
        <property name="email"/>
        <property name="active"/>
    </view>
</views>
