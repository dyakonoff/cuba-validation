<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.dyakonoff.web.user.UserEdit"
        datasource="userDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.dyakonoff.web.user">
    <dsContext>
        <datasource id="userDs"
                    class="com.haulmont.cuba.security.entity.User"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox"
                   spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="userDs">
                <column width="250px">
                    <field property="login"/>
                    <field property="name"/>
                    <field property="firstName"/>
                    <field property="lastName"/>
                    <field property="middleName"/>
                    <field property="position"/>
                    <field property="email"/>
                    <field property="language"/>
                    <field property="timeZone"/>
                    <field property="timeZoneAuto"/>
                    <field property="active"/>
                    <field property="changePasswordAtNextLogon"/>
                    <field property="ipMask"/>
                </column>
            </fieldGroup>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
