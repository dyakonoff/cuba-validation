<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.dyakonoff.web.customer.CustomerEdit"
        datasource="customerDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.dyakonoff.web.customer">
    <dsContext>
        <datasource id="customerDs"
                    class="com.haulmont.dyakonoff.entity.Customer"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="customerDs">
            <column width="250px">
                <field property="name"/>
                <field property="email"/>
                <field property="phone"/>
                <field property="addressLine1"/>
                <field property="addressLine2"/>
                <field property="addressLine3"/>
                <field property="postalCode"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
